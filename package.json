{
  "name": "adonis-api-app",
  "version": "4.1.0",
  "adonis-version": "4.1.0",
  "description": "Adonisjs boilerplate for API server with pre-configured JWT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .js,.tsx,.ts --ignore-pattern node_modules/",
    "lint:fix": "eslint . --fix",
    "prettify": "pretty-quick",
    "prettify:staged": "pretty-quick --staged",
    "api:start": "adonis serve --dev --polling",
    "api:test": "adonis test --bail",
    "api:test:specific": "adonis test --grep",
    "frontend:dev": "webpack --mode development",
    "frontend:prod": "webpack --mode production",
    "frontend:test": "jest --passWithNoTests",
    "frontend:test:watch": "jest --watch",
    "css:build:dev": "postcss frontend/css/tailwind.css -o frontend/css/index.css",
    "css:build:prod": "NODE_ENV=production postcss frontend/css/tailwind.css -o frontend/css/index.css",
    "css:watch": "postcss frontend/css/tailwind.css -w -o frontend/css/index.css",
    "e2e:test": "./node_modules/.bin/cypress open"
  },
  "keywords": [
    "adonisjs",
    "adonis-app"
  ],
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@adonisjs/ace": "^5.0.8",
    "@adonisjs/auth": "^3.1.0",
    "@adonisjs/bodyparser": "^2.0.5",
    "@adonisjs/cors": "^1.0.7",
    "@adonisjs/drive": "^1.0.4",
    "@adonisjs/fold": "^4.0.9",
    "@adonisjs/framework": "^5.0.9",
    "@adonisjs/http-logger": "^1.0.0",
    "@adonisjs/ignitor": "^2.0.8",
    "@adonisjs/lucid": "^6.1.3",
    "@adonisjs/mail": "^3.0.10",
    "@adonisjs/persona": "^1.0.5",
    "@adonisjs/session": "^1.0.29",
    "@adonisjs/validator": "^5.0.6",
    "@adonisjs/vow": "^1.0.17",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@reach/alert": "^0.6.4",
    "@reach/alert-dialog": "^0.6.4",
    "@reach/dialog": "^0.6.4",
    "@reach/visually-hidden": "^0.6.2",
    "@types/jest": "^24.0.25",
    "@types/react": "^16.9.17",
    "@types/react-beautiful-dnd": "^11.0.4",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "adonis-acl": "^1.1.1",
    "autoprefixer": "^9.7.3",
    "axios": "^0.19.0",
    "chalk": "^3.0.0",
    "date-fns": "^2.8.1",
    "dotenv-webpack": "^1.7.0",
    "execa": "^3.4.0",
    "faker": "^4.1.0",
    "fs-extra": "^8.1.0",
    "pg": "^7.16.0",
    "postcss-cli": "^6.1.3",
    "react": "^16.12.0",
    "react-async": "^9.0.0",
    "react-beautiful-dnd": "^12.2.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-spring": "^8.0.27",
    "shelljs": "^0.8.3",
    "tailwindcss": "^1.1.4",
    "ts-jest": "^24.2.0"
  },
  "devDependencies": {
    "@testing-library/cypress": "^5.0.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@types/testing-library__cypress": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^3.4.0",
    "cypress": "^3.8.1",
    "eslint": "^6.8.0",
    "eslint-config-bgord": "^2.1.2",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-sonarjs": "^0.4.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1",
    "style-loader": "^1.1.2",
    "typescript": "^3.7.4",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "autoload": {
    "App": "./app"
  },
  "eslintConfig": {
    "extends": "bgord",
    "rules": {
      "ramda/prefer-ramda-boolean": 0,
      "jest/valid-expect": 0,
      "sonarjs/no-duplicate-string": 0,
      "@typescript-eslint/no-empty-function": 0,
      "sonarjs/no-identical-functions": 1,
      "react/no-multi-comp": 0,
      "jsx-a11y/no-onchange": 1
    }
  }
}
